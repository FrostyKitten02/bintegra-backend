<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="si.bintegra.sp">
	<namespace>SP</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->

	<entity local-service="true" remote-service="true" name="Subscription">
		<column name="id" primary="true" type="long" />
		<column name="packageOffer" type="long" />
		<column name="userId" type="long" />
		<column name="phoneId" type="long" />

		<order by="asc">
			<order-column name="id" />
		</order>

		<finder name="packageOffer" return-type="Collection">
			<finder-column name="packageOffer" />
		</finder>

		<finder name="userId" return-type="Collection">
			<finder-column name="userId" />
		</finder>

		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetTag" package-path="com.liferay.portlet.asset" />
	</entity>

	<entity local-service="true" remote-service="true" name="PackageOffer">
		<column name="id" type="long" primary="true"/>

		<column name="packageId" type="long" />

		<column name="fullDuration" type="long" />
		<column name="discountDuration" type="long" />

		<column name="basePrice" type="double" />
		<column name="discountPrice" type="double" />

		<column name="active" type="boolean" />

		<order by="asc">
			<order-column name="id" />
		</order>

		<finder name="active" return-type="Collection">
			<finder-column name="active" />
		</finder>

		<finder name="packageId" return-type="Collection">
			<finder-column name="packageId" />
		</finder>

		<finder name="packageIdAndActive" return-type="Collection">
			<finder-column name="packageId" />
			<finder-column name="active" />
		</finder>

		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetTag" package-path="com.liferay.portlet.asset" />
	</entity>

</service-builder>